---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <div class="container">
    <div class="skeleton"></div>
    <div class="animationElement"></div>
    <div class="skeleton"></div>
		<div class="line"></div>
		<div class="test"></div>
  </div>
</Layout>

<style lang="scss">
  .container {
    min-height: 200vh;
  }

  .skeleton {
    height: 120vh;
  }

	.line {
		position: fixed;
		inset: 0;
		pointer-events: none;
		z-index: 10;
		&::before,
		&::after {
			position: absolute;
			content: '';
			background-color: red;
		}

		&::before {
			top: 50%;
			left: 0;
			width: 100%;
			height: 1px;
		}

		&::after {
			top: 0;
			left: 50%;
			width: 1px;
			height: 100%;
		}
	}

	.test {
		position: fixed;
		top: 50%;
		top: 5vh;
		left: 50%;
		translate: -50% 0;
		width: 500px;
		height: 500px;
		border: 2px solid black;
	}

  .animationElement {
    width: 500px;
    height: 500px;
		margin-inline: auto;
    background-color: blue;
		transform-origin: bottom;
		// border: 2px solid black;

		animation: grow-progress cubic-bezier(0.25, 1, 0.5, 1) both;
		animation-timeline: view();
		animation-range: contain 0% contain 50%;
  }

  @keyframes grow-progress {
    from {
      scale: 1 0.1;
    }
    to {
      scale: 1 1;
    }
  }

  @keyframes reveal-image {
    from {
      clip-path: inset(30% round 20%);
    }
    to {
      clip-path: inset(0);
    }
  }

  @keyframes color-change {
    from {
      background-color: black;
    }
    to {
      background-color: white;
    }
  }
</style>
